extends ../../layouts/default

block head
	title Add event
	
block body
	div.row
		div.col-sm-8
			div.page-header
				h1 Add event
				form(method='post', action='/events')
					div.form-group
						lavel Event name:
						input.form-control(name='name', type='text')
					div.form-group
						lavel Event description:
						textarea.form-control(name='description', type='text')
					div.form-group
						lavel Venue:
						input.form-control(name='venue', type='text')
					div.form-group
						lavel Event date:
						input.form-control(type='date', name='date')
					div.form-group
						lavel Start time:
						input.form-control(name='startTime', type='time')
					div.form-group
						lavel End time:
						input.form-control(name='endTime', type='time')
					div.form-group
						button.btn.btn-primary.btn-signup(type='submit') Create event
		div.col-sm-4
			div.page-header
				h1 Sidebar