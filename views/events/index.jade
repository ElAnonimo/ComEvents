extends ../../layouts/default

block head
	title View events

block body
	div.row
		div.col-sm-8
			div.page-header
				h1 View events
			ul.events
				each event, i in data
					li
						strong #{event.name}
						|  - Posted by #{event.username}
						p #{event.description}
						a(href='/events/show/#{event._id}', class='btn btn-default') Read more
		div.col-sm-4
			div.page-header
				h1 Sidebar